                                                                    "text": "will be used to construct an endpoint object after the DNS name resolution"
                                                                },
                                                                "children": []
                                                            }
                                                        ]
                                                    },
                                                    {
                                                        "data": {
                                                            "id": "c348grejbig0",
                                                            "created": 1590859043612,
                                                            "text": "a set  of flags"
                                                        },
                                                        "children": [
                                                            {
                                                                "data": {
                                                                    "id": "c348h1g3cww0",
                                                                    "created": 1590859065474,
                                                                    "text": "represented as a bitmap"
                                                                },
                                                                "children": []
                                                            }
                                                        ]
                                                    }
                                                ]
                                            }
                                        ]
                                    },
                                    {
                                        "data": {
                                            "id": "c348hmh4ca80",
                                            "created": 1590859111248,
                                            "text": "asio::ip::tcp::resolver class",
                                            "expandState": "collapse"
                                        },
                                        "children": [
                                            {
                                                "data": {
                                                    "id": "c348hscz5ag0",
                                                    "created": 1590859124058,
                                                    "text": "provides the DNS name resolution functionality"
                                                },
                                                "children": []
                                            }
                                        ]
                                    },
                                    {
                                        "data": {
                                            "id": "c348id9czc00",
                                            "created": 1590859169552,
                                            "text": "asio::ip::tcp::resolver::iterator class",
                                            "expandState": "collapse"
                                        },
                                        "children": [
                                            {
                                                "data": {
                                                    "id": "c348jkac1m80",
                                                    "created": 1590859263212,
                                                    "text": "pointing to the first element of a collection representing resolution results"
                                                },
                                                "children": [
                                                    {
                                                        "data": {
                                                            "id": "c348kp842uw0",
                                                            "created": 1590859352326,
                                                            "text": "each collection element contains an object of the asio::ip::tcp::endpoint class"
                                                        },
                                                        "children": []
                                                    },
                                                    {
                                                        "data": {
                                                            "id": "c348my4g4800",
                                                            "created": 1590859528424,
                                                            "text": "the resulting collection may contain endpoints representing both IPv4 and IPv6 addresses"
                                                        },
                                                        "children": []
                                                    }
                                                ]
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "data": {
                            "id": "c348nxut8gw0",
                            "created": 1590859606206,
                            "text": "Binding a socket to an endpoint",
                            "expandState": "collapse"
                        },
                        "children": [
                            {
                                "data": {
                                    "id": "c348obk4rfc0",
                                    "created": 1590859636035,
                                    "text": "binding",
                                    "expandState": "collapse"
                                },
                                "children": [
                                    {
                                        "data": {
                                            "id": "c348ocunyjc0",
                                            "created": 1590859638848,
                                            "text": "associating a socket with a particular endpoint"
                                        },
                                        "children": []
                                    },
                                    {
                                        "data": {
                                            "id": "c34joklf8uw0",
                                            "created": 1590890687913,
                                            "text": "operations bind unbound sockets implicitly"
                                        },
                                        "children": [
                                            {
                                                "data": {
                                                    "id": "c34jp5b213s0",
                                                    "created": 1590890732998,
                                                    "text": "operation that connects an unbound active socket to a remote application"
                                                },
                                                "children": []
                                            }
                                        ]
                                    }
                                ]
                            },
                            {
                                "data": {
                                    "id": "c34jrz0g64o0",
                                    "created": 1590890954389,
                                    "text": "How to do it",
                                    "expandState": "collapse"
                                },
                                "children": [
                                    {
                                        "data": {
                                            "id": "c34jsqjhik00",
                                            "created": 1590891014313,
                                            "text": "1. Obtain the protocol port number on which the server should listen for incoming connection requests"
                                        },
                                        "children": []
                                    },
                                    {
                                        "data": {
                                            "id": "c34jsyfp6000",
                                            "created": 1590891031498,
                                            "text": "2. Create an endpoint that represents all IP addresses available on the host and the protocol port number obtained in the step 1"
                                        },
                                        "children": []
                                    },
                                    {
                                        "data": {
                                            "id": "c34jt3vfhkg0",
                                            "created": 1590891043333,
                                            "text": "3. Create and open an acceptor socket"
                                        },
                                        "children": [
                                            {
                                                "data": {
                                                    "id": "c34jvu8kj2o0",
                                                    "created": 1590891257453,
                                                    "text": "don't need to create another object representing the  protocol to pass it to the acceptor socket's constructor"
                                                },
                                                "children": []
                                            },
                                            {
                                                "data": {
                                                    "id": "c34jvwg3i5k0",
                                                    "created": 1590891262261,
                                                    "text": "use the endpoint's  protocol() method, which returns an object of the asio::ip::tcp class representing  the corresponding protocols"
                                                },
                                                "children": []
                                            }
                                        ]
                                    },
                                    {
                                        "data": {
                                            "id": "c34jtehvk540",
                                            "created": 1590891066458,
                                            "text": "4. Call the acceptor socket's bind() method, passing the endpoint object as an argument to it"
                                        },
                                        "children": []
                                    }
                                ]
                            },
                            {
                                "data": {
                                    "id": "c34jtmfqcuw0",
                                    "created": 1590891083744,
                                    "text": "How it works",
                                    "expandState": "collapse"
                                },
                                "children": [
                                    {
                                        "data": {
                                            "id": "c34jx0k0zy80",
                                            "created": 1590891349570,
                                            "text": "bind() method"
                                        },
                                        "children": [
                                            {
                                                "data": {
                                                    "id": "c34jx7kzdco0",
                                                    "created": 1590891364865,
                                                    "text": "If the call succeeds"
                                                },
                                                "children": [
                                                    {
                                                        "data": {
                                                            "id": "c34jxk6tnjs0",
                                                            "created": 1590891392307,
                                                            "text": "the acceptor socket is bound to the corresponding endpoint"
                                                        },
                                                        "children": []
                                                    },
                                                    {
                                                        "data": {
                                                            "id": "c34jxpb3eww0",
                                                            "created": 1590891403450,
                                                            "text": "and is ready to start listening for incoming connection requests on that endpoint"
                                                        },
                                                        "children": []
                                                    }
                                                ]
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "data": {
                            "id": "c34jzc1o1tk0",
                            "created": 1590891531310,
                            "text": "Connecting a socket",
                            "expandState": "collapse"
                        },
                        "children": [
                            {
                                "data": {
                                    "id": "c34jzw4py5c0",
                                    "created": 1590891575030,
                                    "text": "connection establishment process",
                                    "expandState": "collapse"
                                },
                                "children": [
                                    {
                                        "data": {
                                            "id": "c34k15rqn8w0",
                                            "created": 1590891674377,
                                            "text": "client application"
                                        },
                                        "children": [
                                            {
                                                "data": {
                                                    "id": "c34k1qjyrvc0",
                                                    "created": 1590891719619,
                                                    "text": "creates and opens an active socket",
                                                    "expandState": "expand"
                                                },
                                                "children": [
                                                    {
                                                        "data": {
                                                            "id": "c34k1xq33k80",
                                                            "created": 1590891735227,
                                                            "text": "and issues a connect() command on it"
                                                        },
                                                        "children": [
                                                            {
                                                                "data": {
                                                                    "id": "c34k2c887fc0",
                                                                    "created": 1590891766799,
                                                                    "text": "leads to a connection establishment request message being sent to the server application over the network"
                                                                },
                                                                "children": []
                                                            }
                                                        ]
                                                    }
                                                ]
                                            }
                                        ]
                                    },
                                    {
                                        "data": {
                                            "id": "c34k2z6gjc00",
                                            "created": 1590891816758,
                                            "text": "server application"
                                        },
                                        "children": [
                                            {
                                                "data": {
                                                    "id": "c34k3czmlk00",
                                                    "created": 1590891846820,
                                                    "text": "receives the request"
                                                },
                                                "children": [
                                                    {
                                                        "data": {
                                                            "id": "c34k3nv0pzc0",
                                                            "created": 1590891870486,
                                                            "text": "creates an active socket on its side"
                                                        },
                                                        "children": [
                                                            {
                                                                "data": {
                                                                    "id": "c34k408q58w0",
                                                                    "created": 1590891897436,
                                                                    "text": "marking it as connected to a specific client"
                                                                },
                                                                "children": [
                                                                    {
                                                                        "data": {
                                                                            "id": "c34k4d7n9iw0",
                                                                            "created": 1590891925669,
                                                                            "text": "replies back to the client with the message acknowledging that connection is successfully set up on the server side"
                                                                        },
                                                                        "children": []
                                                                    }
                                                                ]
                                                            }
                                                        ]
                                                    }
                                                ]
                                            }
                                        ]
                                    },
                                    {
                                        "data": {
                                            "id": "c34k8umeh9c0",
                                            "created": 1590892277023,
                                            "text": "client application"
                                        },
                                        "children": [
                                            {
                                                "data": {
                                                    "id": "c34k90lyn9k0",
                                                    "created": 1590892290057,
                                                    "text": "receives the acknowledgement from the server"
                                                },
                                                "children": [
                                                    {
                                                        "data": {
                                                            "id": "c34k9ho7hz40",
                                                            "created": 1590892327198,
                                                            "text": "marks its socket as connected to the server"
                                                        },
                                                        "children": [
                                                            {
                                                                "data": {
                                                                    "id": "c34k9q41ots0",
                                                                    "created": 1590892345570,
                                                                    "text": "sends one more message to it acknowledging that the connection is successfully set up on the client side"
                                                                },
                                                                "children": []
                                                            }
                                                        ]
                                                    }
                                                ]
                                            }
                                        ]
                                    },
                                    {
                                        "data": {
                                            "id": "c34ka4zmdcg0",
                                            "created": 1590892377954,
                                            "text": "server application"
                                        },
                                        "children": [
                                            {
                                                "data": {
                                                    "id": "c34kau39pgg0",
                                                    "created": 1590892432595,
                                                    "text": "receives the acknowledgement message from the client"
                                                },
                                                "children": [
                                                    {
                                                        "data": {
                                                            "id": "c34kayyflqg0",
                                                            "created": 1590892443186,
                                                            "text": "the logical connection between two applications is considered established"
                                                        },
                                                        "children": []
                                                    }
                                                ]
                                            }
                                        ]
                                    }
                                ]
                            },
                            {
                                "data": {
                                    "id": "c34kbh22en40",
                                    "created": 1590892482588,
                                    "text": "How to do it",
                                    "expandState": "collapse"
                                },
                                "children": [
                                    {
                                        "data": {
                                            "id": "c34kbz058c00",
                                            "created": 1590892521654,
                                            "text": "1. Obtain the target server application's IP address and a protocol port number"
                                        },
                                        "children": []
                                    },
                                    {
                                        "data": {
                                            "id": "c34kc6fcdls0",
                                            "created": 1590892537810,
                                            "text": "2. Create an object of the asio::ip::tcp::endpoint class from the IP address and the protocol port number obtained in step 1"
                                        },
                                        "children": []
                                    },
                                    {
                                        "data": {
                                            "id": "c34kcahz3wg0",
                                            "created": 1590892546676,
                                            "text": "3. Create and open an active socket"
                                        },
                                        "children": []
                                    },
                                    {
                                        "data": {
                                            "id": "c34kcefpk7s0",
                                            "created": 1590892555247,
                                            "text": "4. Call the socket's connect() method specifying the endpoint object created in step 2 as an argument"
                                        },
                                        "children": []
                                    },
                                    {
                                        "data": {
                                            "id": "c34kckzaiu80",
                                            "created": 1590892569492,
                                            "text": "5. If the method succeeds, the socket is considered connected and can be used to send and receive data to and from the server"
                                        },
                                        "children": []
                                    }
                                ]
                            },
                            {
                                "data": {
                                    "id": "c34kd40ljig0",
                                    "created": 1590892610929,
                                    "text": "How it works",
                                    "expandState": "collapse"
                                },
                                "children": [
                                    {
                                        "data": {
                                            "id": "c34kemwn71c0",
                                            "created": 1590892730413,
                                            "text": "socket's connect() method"
                                        },
                                        "children": [
                                            {
                                                "data": {
                                                    "id": "c34ketss4gw0",
                                                    "created": 1590892745417,
                                                    "text": "will bind the socket to the endpoint consisting of an IP address and a protocol port number chosen by the operating system"
                                                },
                                                "children": []
                                            }
                                        ]
                                    }
                                ]
                            },
                            {
                                "data": {
                                    "id": "c34kgcfj8qg0",
                                    "created": 1590892864339,
                                    "text": "There's more",
                                    "expandState": "collapse"
                                },
                                "children": [
                                    {
                                        "data": {
                                            "id": "c34khhydxps0",
                                            "created": 1590892954728,
                                            "text": "When a DNS name resolves to multiple IP addresses",
                                            "expandState": "expand"
                                        },
                                        "children": [
                                            {
                                                "data": {
                                                    "id": "c34kj2upvxc0",
                                                    "created": 1590893078582,
                                                    "text": "client application"
                                                },
                                                "children": [
                                                    {
                                                        "data": {
                                                            "id": "c34kjpobpko0",
                                                            "created": 1590893128261,
                                                            "text": "usually has no reasons to prefer one IP address to any other"
                                                        },
                                                        "children": []
                                                    }
                                                ]
                                            },
                                            {
                                                "data": {
                                                    "id": "c34kk0uzhig0",
                                                    "created": 1590893152609,
                                                    "text": "common approach",
                                                    "expandState": "expand"
                                                },
                                                "children": [
                                                    {
                                                        "data": {
                                                            "id": "c34kkb0awzs0",
                                                            "created": 1590893174698,
                                                            "text": "iterate through endpoints in the collection"
                                                        },
                                                        "children": []
                                                    },
                                                    {
                                                        "data": {
                                                            "id": "c34kkhgems00",
                                                            "created": 1590893188732,
                                                            "text": " and try to connect to each of them one by one until the connection succeeds"
                                                        },
                                                        "children": []
                                                    }
                                                ]
                                            },
                                            {
                                                "data": {
                                                    "id": "c34kkxbcmu80",
                                                    "created": 1590893223255,
                                                    "text": "free function asio::connect()",
                                                    "expandState": "collapse"
                                                },
                                                "children": [
                                                    {
                                                        "data": {
                                                            "id": "c34kllo2xeo0",
                                                            "created": 1590893276268,
                                                            "text": "iterates over a collection of endpoints"
                                                        },
                                                        "children": []
                                                    },
                                                    {
                                                        "data": {
                                                            "id": "c34klpb8i000",
                                                            "created": 1590893284198,
                                                            "text": "and tries to connect the socket to each endpoint"
                                                        },
                                                        "children": []
                                                    }
                                                ]
                                            },
                                            {
                                                "data": {
                                                    "id": "c34knvic0zs0",
                                                    "created": 1590893454416,
                                                    "text": "steps required to connect a socket to a server application represented by a DNS name and a protocol port number",
                                                    "expandState": "expand"
                                                },
                                                "children": [
                                                    {
                                                        "data": {
                                                            "id": "c34ko7ma7340",
                                                            "created": 1590893480777,
                                                            "text": "1. Obtain the DNS name of a host running the server application and the server's port number and represent them as strings"
                                                        },
                                                        "children": []
                                                    },
                                                    {
                                                        "data": {
                                                            "id": "c34kocgjm7c0",
                                                            "created": 1590893491313,
                                                            "text": "2. Resolve a DNS name using the asio::ip::tcp::resolver class"
                                                        },
                                                        "children": []
                                                    },
                                                    {
                                                        "data": {
                                                            "id": "c34kodhksy80",
                                                            "created": 1590893493553,
                                                            "text": "3. Create an active socket without opening it"
                                                        },
                                                        "children": [
                                                            {
                                                                "data": {
                                                                    "id": "c34kpavni5c0",
                                                                    "created": 1590893566238,
                                                                    "text": "don't open the socket"
                                                                },
                                                                "children": [
                                                                    {
                                                                        "data": {
                                                                            "id": "c34kphe3p5c0",
                                                                            "created": 1590893580414,
                                                                            "text": "because we  don't know the version of IP addresses to which the provided DNS name will resolve"
                                                                        },
                                                                        "children": []
                                                                    }
                                                                ]
                                                            }
                                                        ]
                                                    },
                                                    {
                                                        "data": {
                                                            "id": "c34koqgthds0",
                                                            "created": 1590893521805,
                                                            "text": "4. Call the asio::connect() function passing a socket object and an iterator object obtained in step 2 to it as arguments"
                                                        },
                                                        "children": []
                                                    }
                                                ]
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "data": {
                            "id": "c34kqi713ew0",
                            "created": 1590893660527,
                            "text": "Accepting connections",
                            "expandState": "collapse"
                        },
                        "children": [
                            {
                                "data": {
                                    "id": "c34ks1jfapk0",
                                    "created": 1590893781000,
                                    "text": "server side",
                                    "expandState": "collapse"
                                },
                                "children": [
                                    {
                                        "data": {
                                            "id": "c34ktgxs9600",
                                            "created": 1590893892884,
                                            "text": "server application",
                                            "expandState": "collapse"
                                        },
                                        "children": [
                                            {
                                                "data": {
                                                    "id": "c34ksgzsa3k0",
                                                    "created": 1590893814641,
                                                    "text": "creates and opens an acceptor socket"
                                                },
                                                "children": []
                                            },
                                            {
                                                "data": {
                                                    "id": "c34kt9k4plc0",
                                                    "created": 1590893876821,
                                                    "text": "and binds it to the particular endpoint"
                                                },
                                                "children": [
                                                    {
                                                        "data": {
                                                            "id": "c34kttd01eo0",
                                                            "created": 1590893919925,
                                                            "text": "At this point"
                                                        },
                                                        "children": [
                                                            {
                                                                "data": {
                                                                    "id": "c34ku2i6m8w0",
                                                                    "created": 1590893939830,
                                                                    "text": "requests arriving at the acceptor socket's endpoint are still rejected by the operating system"
                                                                },
                                                                "children": []
                                                            }
                                                        ]
                                                    }
                                                ]
                                            },
                                            {
                                                "data": {
                                                    "id": "c34kvd8oaew0",
                                                    "created": 1590894041564,
                                                    "text": "switch acceptor socket into listening mode"
                                                },
                                                "children": [
                                                    {
                                                        "data": {
                                                            "id": "c34kvtitfww0",
                                                            "created": 1590894077005,
                                                            "text": "After this"
                                                        },
                                                        "children": [
                                                            {
                                                                "data": {
                                                                    "id": "c34kw7fjc3s0",
                                                                    "created": 1590894107282,
                                                                    "text": " the operating system allocates a queue for pending connection requests associated with this acceptor socket"
                                                                },
                                                                "children": []
                                                            },
                                                            {
                                                                "data": {
                                                                    "id": "c34kwhyiqyw0",
                                                                    "created": 1590894130198,
                                                                    "text": "and starts accepting connection request addressed to it"
                                                                },
                                                                "children": []
                                                            }
                                                        ]
                                                    }
                                                ]
                                            }
                                        ]
                                    },
                                    {
                                        "data": {
                                            "id": "c34kx0ydr200",
                                            "created": 1590894171548,
                                            "text": "When a new connection request arrives"
                                        },
                                        "children": [
                                            {
                                                "data": {
                                                    "id": "c34kx9preaw0",
                                                    "created": 1590894190618,
                                                    "text": "initially received by the operating system"
                                                },
                                                "children": [
                                                    {
                                                        "data": {
                                                            "id": "c34kxvhee8w0",
                                                            "created": 1590894238001,
                                                            "text": "puts it to the pending connection requests queue associated with an acceptor socket being the connection request's target"
                                                        },
                                                        "children": []
                                                    }
                                                ]
                                            },
                                            {
                                                "data": {
                                                    "id": "c34kyjs9www0",
                                                    "created": 1590894290902,
                                                    "text": "When in the queue"
                                                },
                                                "children": [
                                                    {
                                                        "data": {
                                                            "id": "c34kyt00s1s0",
                                                            "created": 1590894310961,
                                                            "text": "the connection request is available to the server application for processing"
                                                        },
                                                        "children": []
                                                    }
                                                ]
                                            },
                                            {
                                                "data": {
                                                    "id": "c34kzaoairs0",
                                                    "created": 1590894349434,
                                                    "text": "The server application, when ready to process the next connection request"
                                                },
                                                "children": [
                                                    {
                                                        "data": {
                                                            "id": "c34kzis8jiw0",
                                                            "created": 1590894367087,
                                                            "text": "de-queues one and processes it"
                                                        },
                                                        "children": []
                                                    }
                                                ]
                                            }
                                        ]
                                    },
                                    {
                                        "data": {
                                            "id": "c34l0fuphrc0",
                                            "created": 1590894439070,
                                            "text": "When processing a pending connection request"
                                        },
                                        "children": [
                                            {
                                                "data": {
                                                    "id": "c34l0t2scp40",
                                                    "created": 1590894467857,
                                                    "text": "the acceptor socket allocates a new active socket"
                                                },
                                                "children": []
                                            },
                                            {
                                                "data": {
                                                    "id": "c34l0u2orug0",
                                                    "created": 1590894470028,
                                                    "text": "binds it to an endpoint chosen by the operating system"
                                                },
                                                "children": []
                                            },
                                            {
                                                "data": {
                                                    "id": "c34l13ofi400",
                                                    "created": 1590894490933,
                                                    "text": "and connects it to the corresponding client application that has issued that connection request"
                                                },
                                                "children": []
                                            },
                                            {
                                                "data": {
                                                    "id": "c34l1qfkdgg0",
                                                    "created": 1590894540463,
                                                    "text": "Then"
                                                },
                                                "children": [
                                                    {
                                                        "data": {
                                                            "id": "c34l1vr5yi80",
                                                            "created": 1590894552049,
                                                            "text": "this new active socket is ready to be used for communication with the client"
                                                        },
                                                        "children": []
                                                    },
                                                    {
                                                        "data": {
                                                            "id": "c34l205jvqg0",
                                                            "created": 1590894561627,
                                                            "text": "The acceptor socket becomes available to process the next pending connection request"
                                                        },
                                                        "children": []
                                                    }
                                                ]
                                            }
                                        ]
                                    }
                                ]
                            },
                            {
                                "data": {
                                    "id": "c34l2k543h40",
                                    "created": 1590894605135,
                                    "text": "How to do it",
                                    "expandState": "collapse"
                                },
                                "children": [
                                    {
                                        "data": {
                                            "id": "c34l34xvi4g0",
                                            "created": 1590894650410,
                                            "text": "synchronous mode",
                                            "expandState": "collapse"
                                        },
                                        "children": [
                                            {
                                                "data": {
                                                    "id": "c34l3mh8vqw0",
                                                    "created": 1590894688586,
                                                    "text": "1. Obtain the port number on which the server will receive incoming connection requests"
                                                },
                                                "children": []
                                            },
                                            {
                                                "data": {
                                                    "id": "c34l3r3f2n40",
                                                    "created": 1590894698634,
                                                    "text": "2. Create a server endpoint"
                                                },
                                                "children": []
                                            },
                                            {
                                                "data": {
                                                    "id": "c34l3ui3azs0",
                                                    "created": 1590894706052,
                                                    "text": "3. Instantiate and open an acceptor socket"
                                                },
                                                "children": []
                                            },
                                            {
                                                "data": {
                                                    "id": "c34l43cayf40",
                                                    "created": 1590894725293,
                                                    "text": "4. Bind the acceptor socket to the server endpoint created in step 2"
                                                },
                                                "children": []
                                            },
                                            {
                                                "data": {
                                                    "id": "c34l4exxefs0",
                                                    "created": 1590894750545,
                                                    "text": "5. Call the acceptor socket's listen() method to make it start listening for incoming connection requests on the endpoint"
                                                },
                                                "children": []
                                            },
                                            {
                                                "data": {
                                                    "id": "c34l4jghncw0",
                                                    "created": 1590894760374,
                                                    "text": "6. Instantiate an active socket object"
                                                },
                                                "children": []
                                            },
                                            {
                                                "data": {
                                                    "id": "c34l5jv4c000",
                                                    "created": 1590894839623,
                                                    "text": "7. When ready to process a connection request, call the acceptor socket's accept() method passing an active socket object created in step 6 as an argument"
                                                },
                                                "children": []
                                            },
                                            {
                                                "data": {
                                                    "id": "c34l5osezww0",
                                                    "created": 1590894850343,
                                                    "text": "8. If the call succeeds, the active socket is connected to the client application and is ready to be used for communication with it"
                                                },
                                                "children": []
                                            }
                                        ]
                                    }
                                ]
                            },
                            {
                                "data": {
                                    "id": "c34l6r6tso00",
                                    "created": 1590894933933,
                                    "text": "How it works",
                                    "expandState": "collapse"
                                },
                                "children": [
                                    {
                                        "data": {
                                            "id": "c34l7269gg00",
                                            "created": 1590894957843,
                                            "text": "listen() method",
                                            "expandState": "collapse"
                                        },
                                        "children": [
                                            {
                                                "data": {
                                                    "id": "c34l7qheo940",
                                                    "created": 1590895010760,
                                                    "text": "accepts ab argument"
                                                },
                                                "children": [
                                                    {
                                                        "data": {
                                                            "id": "c34l8nap81c0",
                                                            "created": 1590895082188,
                                                            "text": "specifies the size of the queue maintained by the operating system to which it puts connection requests arriving from the clients"
                                                        },
                                                        "children": []
                                                    },
                                                    {
                                                        "data": {
                                                            "id": "c34l9372d080",
                                                            "created": 1590895116797,
                                                            "text": "The requests stay in the queue and are waiting for the server application to dequeue and process them"
                                                        },
                                                        "children": []
                                                    },
                                                    {
                                                        "data": {
                                                            "id": "c34l9c53gqw0",
                                                            "created": 1590895136269,
                                                            "text": "When the queue becomes full, the new connection requests are rejected by the operating system"
                                                        },
                                                        "children": []
                                                    }
                                                ]
                                            }
                                        ]
                                    },
                                    {
                                        "data": {
                                            "id": "c34mz54o0eg0",
                                            "created": 1590899979583,
                                            "text": "accept() method",
                                            "expandState": "collapse"
                                        },
                                        "children": [
                                            {
                                                "data": {
                                                    "id": "c34mzg6euo80",
                                                    "created": 1590900003634,
                                                    "text": "checks the queue associated with the acceptor socket"
                                                },
                                                "children": []
                                            },
                                            {
                                                "data": {
                                                    "id": "c34n02740v40",
                                                    "created": 1590900051565,
                                                    "text": "If the queue is empty, the method blocks"
                                                },
                                                "children": []
                                            },
                                            {
                                                "data": {
                                                    "id": "c34oit9zw2o0",
                                                    "created": 1590904342177,
                                                    "text": "If at least one connection request is available in the queue"
                                                },
                                                "children": [
                                                    {
                                                        "data": {
                                                            "id": "c34oj3tteaw0",
                                                            "created": 1590904365144,
                                                            "text": "the one on the top of the queue  is extracted from it and processed"
                                                        },
                                                        "children": []
                                                    },
                                                    {
                                                        "data": {
                                                            "id": "c34ojgnn4eg0",
                                                            "created": 1590904393069,
                                                            "text": "The active socket that was passed to the accept() method as an argument is connected to the corresponding client application which issued  the connection request"
                                                        },
                                                        "children": []
                                                    }
                                                ]
                                            }
                                        ]
                                    },
                                    {
                                        "data": {
                                            "id": "c34ol5lgrmo0",
                                            "created": 1590904525721,
                                            "text": "If the connection establishment process succeeds",
                                            "expandState": "collapse"
                                        },
                                        "children": [
                                            {
                                                "data": {
                                                    "id": "c34ole229xs0",
                                                    "created": 1590904544139,
                                                    "text": "the accept() method returns"
                                                },
                                                "children": []
                                            },
                                            {
                                                "data": {
                                                    "id": "c34olinjg2o0",
                                                    "created": 1590904554144,
                                                    "text": "the active socket"
                                                },
                                                "children": [
                                                    {
                                                        "data": {
                                                            "id": "c34olvp97hc0",
                                                            "created": 1590904582546,
                                                            "text": "is opened"
                                                        },
                                                        "children": []
                                                    },
                                                    {
                                                        "data": {
                                                            "id": "c34om2g4z7c0",
                                                            "created": 1590904597232,
                                                            "text": "and connected to the client application"
                                                        },
                                                        "children": []
                                                    },
                                                    {
                                                        "data": {
                                                            "id": "c34om9xuwqg0",
                                                            "created": 1590904613541,
                                                            "text": "and can be used to send  data to and receive data from it"
                                                        },
                                                        "children": []
                                                    }
                                                ]
                                            }
                                        ]
                                    },
                                    {
                                        "data": {
                                            "id": "c34on5p87000",
                                            "created": 1590904682676,
                                            "text": "TCP server v.s. UDP server",
                                            "expandState": "collapse"
                                        },
                                        "children": [
                                            {
                                                "data": {
                                                    "id": "c34onc40yuw0",
                                                    "created": 1590904696632,
                                                    "text": "TCP server",
                                                    "expandState": "collapse"
                                                },
                                                "children": [
                                                    {
                                                        "data": {
                                                            "id": "c34ons6fv680",
                                                            "created": 1590904731606,
                                                            "text": "the acceptor socket doesn't connect itself to the client application"
                                                        },
                                                        "children": []
                                                    },
                                                    {
                                                        "data": {
                                                            "id": "c34oohlln8g0",
                                                            "created": 1590904786943,
                                                            "text": "Instead, it opens and connects another active socket, which is then used for communication with the client application"
                                                        },
                                                        "children": []
                                                    },
                                                    {
                                                        "data": {
                                                            "id": "c34oo8e4pig0",
                                                            "created": 1590904766900,
                                                            "text": "The acceptor socket only listens for and processes (accepts) incoming connection requests"
                                                        },
                                                        "children": []
                                                    }
                                                ]
                                            },
                                            {
                                                "data": {
                                                    "id": "c34onefpmo80",
                                                    "created": 1590904701692,
                                                    "text": "UDP server"
                                                },
                                                "children": [
                                                    {
                                                        "data": {
                                                            "id": "c34oov3yi800",
                                                            "created": 1590904816351,
                                                            "text": "don't use acceptor sockets"
                                                        },
                                                        "children": [
                                                            {
                                                                "data": {
                                                                    "id": "c34op4ejjs00",
                                                                    "created": 1590904836582,
                                                                    "text": "because the UDP protocol doesn't imply connection establishment"
                                                                },
                                                                "children": []
                                                            }
                                                        ]
                                                    },
                                                    {
                                                        "data": {
                                                            "id": "c34opbzm4yg0",
                                                            "created": 1590904853094,
                                                            "text": "an active socket is used that is bound to an endpoint and listens for incoming I/O messages"
                                                        },
                                                        "children": []
                                                    },
                                                    {
                                                        "data": {
                                                            "id": "c34ophosq4w0",
                                                            "created": 1590904865500,
                                                            "text": "and this same active socket is used for communication"
                                                        },
                                                        "children": []
                                                    }
                                                ]
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            {
                "data": {
                    "id": "c34oq0xcf140",
                    "created": 1590904907376,
                    "text": "2 I/O Operations",
                    "expandState": "expand"
                },
                "children": [
                    {
                        "data": {
                            "id": "c34oqgfymeo0",
                            "created": 1590904941153,
                            "text": "Introduction",
                            "expandState": "collapse"
                        },
                        "children": [
                            {
                                "data": {
                                    "id": "c34or3dhc0g0",
                                    "created": 1590904991069,
                                    "text": "I/O buffers",
                                    "expandState": "collapse"
                                },
                                "children": [
                                    {
                                        "data": {
                                            "id": "c34ot6fpzds0",
                                            "created": 1590905154463,
                                            "text": "contiguous blocks of memory allocated in the process's address space used to store the data"
                                        },
                                        "children": []
                                    }
                                ]
                            },
                            {
                                "data": {
                                    "id": "c34otv27h000",
                                    "created": 1590905208066,
                                    "text": "Synchronous and asynchronous I/O operations ",
                                    "expandState": "collapse"
                                },
                                "children": [
                                    {
                                        "data": {
                                            "id": "c34ou0yfo1k0",
                                            "created": 1590905220898,
                                            "text": "two types of I/O operations",
                                            "expandState": "collapse"
                                        },
                                        "children": [
                                            {
                                                "data": {
                                                    "id": "c34ou434z200",
                                                    "created": 1590905227713,
                                                    "text": "synchronous"
                                                },
                                                "children": []
                                            },
                                            {
                                                "data": {
                                                    "id": "c34ou758kk00",
                                                    "created": 1590905234370,
                                                    "text": "asynchronous"
                                                },
                                                "children": []
                                            }
                                        ]
                                    },
                                    {
                                        "data": {
                                            "id": "c34owbh64cg0",
                                            "created": 1590905400527,
                                            "text": "inversion of control approach",
                                            "expandState": "collapse"
                                        },
                                        "children": [
                                            {
                                                "data": {
                                                    "id": "c34owik1byg0",
                                                    "created": 1590905415938,
                                                    "text": "After one or more asynchronous operations are initiated"
                                                },
                                                "children": []
                                            },
                                            {
                                                "data": {
                                                    "id": "c34owqoufbc0",
                                                    "created": 1590905433643,
                                                    "text": "the application hands over one of its threads of execution to the library"
                                                },
                                                "children": []
                                            },
                                            {
                                                "data": {
                                                    "id": "c34owyyus7k0",
                                                    "created": 1590905451663,
                                                    "text": "and the latter uses this thread to run the event loop and invoke the callbacks provided by the application to notify it about the completion of the previously initiated asynchronous operation"
                                                },
                                                "children": []
                                            },
                                            {
                                                "data": {
                                                    "id": "c34ox2u9als0",
                                                    "created": 1590905460092,
                                                    "text": "The results of asynchronous operations are passed to the callback as arguments"
                                                },
                                                "children": []
                                            }
                                        ]
                                    }
                                ]
                            },
                            {
                                "data": {
                                    "id": "c34oy85d8ew0",
                                    "created": 1590905550012,
                                    "text": "Additional operations"
                                },
                                "children": [
                                    {
                                        "data": {
                                            "id": "c34oypu6xnc0",
                                            "created": 1590905588518,
                                            "text": "such as"
                                        },
                                        "children": [
                                            {
                                                "data": {
                                                    "id": "c34oyrh3tr40",
                                                    "created": 1590905592080,
                                                    "text": "canceling asynchronous operations"
                                                },
                                                "children": []
                                            },
                                            {
                                                "data": {
                                                    "id": "c34oyvfu5pc0",
                                                    "created": 1590905600711,
                                                    "text": "shutting down"
                                                },
                                                "children": []
                                            },
                                            {
                                                "data": {
                                                    "id": "c34oywbaft40",
                                                    "created": 1590905602613,
                                                    "text": "closing a socket"
                                                },
                                                "children": []
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "data": {
                            "id": "c34ozzii92w0",
                            "created": 1590905687944,
                            "text": "Using fixed length I/O buffers",
                            "expandState": "collapse"
                        },
                        "children": [
                            {
                                "data": {
                                    "id": "c34p0oyfzyw0",
                                    "created": 1590905743327,
                                    "text": "usually used"
                                },
                                "children": [
                                    {
                                        "data": {
                                            "id": "c34p0u7xqkg0",
                                            "created": 1590905754786,
                                            "text": "when the size of the message to be sent or received is known"
                                        },
                                        "children": []
                                    }
                                ]
                            },
                            {
                                "data": {
                                    "id": "c34p1nrlr3s0",
                                    "created": 1590905819101,
                                    "text": "How to do it",
                                    "expandState": "collapse"
                                },
                                "children": [
                                    {
                                        "data": {
                                            "id": "c34p53mqw200",
                                            "created": 1590906088728,
                                            "text": "two classes represent fixed length buffer",
                                            "expandState": "collapse"
                                        },
                                        "children": [
                                            {
                                                "data": {
                                                    "id": "c34p6d6evug0",
                                                    "created": 1590906187872,
                                                    "text": "represent a contiguous block of memory that is specified by the address of the first byte of the block and its size in bytes",
                                                    "expandState": "expand"
                                                },
                                                "children": [
                                                    {
                                                        "data": {
                                                            "id": "c34p5ojalo80",
                                                            "created": 1590906134232,
                                                            "text": "asio::mutable_buffer"
                                                        },
                                                        "children": [
                                                            {
                                                                "data": {
                                                                    "id": "c34p6pjtyls0",
                                                                    "created": 1590906214805,
                                                                    "text": "writable"
                                                                },
                                                                "children": []
                                                            }
                                                        ]
                                                    },
                                                    {
                                                        "data": {
                                                            "id": "c34p5pt31tc0",
                                                            "created": 1590906137000,
                                                            "text": "asio::const_buffer"
                                                        },
                                                        "children": [
                                                            {
                                                                "data": {
                                                                    "id": "c34p6u4hfzc0",
                                                                    "created": 1590906224761,
                                                                    "text": "read-only"
                                                                },
                                                                "children": []
                                                            }
                                                        ]
                                                    }
                                                ]
                                            }
                                        ]
                                    },
                                    {
                                        "data": {
                                            "id": "c34p77dv0eo0",
                                            "created": 1590906253626,
                                            "text": "neither the asio::mutable_buffer nor asio::const_buffer classes are used in Boost.Asio I/O functions and methods directly",
                                            "expandState": "collapse"
                                        },
                                        "children": [
                                            {
                                                "data": {
                                                    "id": "c34p7sd8p5s0",
                                                    "created": 1590906299301,
                                                    "text": "Instead"
                                                },
                                                "children": [
                                                    {
                                                        "data": {
                                                            "id": "c34p80vky4g0",
                                                            "created": 1590906317824,
                                                            "text": "MutableBufferSequence concept"
                                                        },
                                                        "children": [
                                                            {
                                                                "data": {
                                                                    "id": "c34p8t5yiv40",
                                                                    "created": 1590906379402,
                                                                    "text": "specifies an object that represents a collection of the asio::mutable_buffer objects"
                                                                },
                                                                "children": []
                                                            },
                                                            {
                                                                "data": {
                                                                    "id": "c34piikx8wg0",
                                                                    "created": 1590907140003,
                                                                    "text": "For instance"
                                                                },
                                                                "children": [
                                                                    {
                                                                        "data": {
                                                                            "id": "c34pishw1aw0",
                                                                            "created": 1590907161588,
                                                                            "text": "std::vector<asio::mutable_buffer>"
                                                                        },
                                                                        "children": []
                                                                    }
                                                                ]
                                                            }
                                                        ]
                                                    },
                                                    {
                                                        "data": {
                                                            "id": "c34p870is3c0",
                                                            "created": 1590906331184,
                                                            "text": "ConstBufferSequence concept"
                                                        },
                                                        "children": [
                                                            {
                                                                "data": {
                                                                    "id": "c34p92ar4yw0",
                                                                    "created": 1590906399283,
                                                                    "text": "specifies an object that represents a collection of the asio::const_buffer objects"
                                                                },
                                                                "children": []
                                                            }
                                                        ]
                                                    }
                                                ]
                                            }
                                        ]
                                    },
                                    {
                                        "data": {
                                            "id": "c34pahew9y80",
                                            "created": 1590906510549,
                                            "text": "Boost.Asio I/O functions and methods",
                                            "expandState": "collapse"
                                        },
                                        "children": [
                                            {
                                                "data": {
                                                    "id": "c34pg7o2u1s0",
                                                    "created": 1590906959521,
                                                    "text": "designed to work with composite buffers that are represented as a collection of buffers that fulfill the requirements of either the MutableBufferSequence or ConstBufferSequence concept",
                                                    "expandState": "expand"
                                                },
                                                "children": [
                                                    {
                                                        "data": {
                                                            "id": "c34phl3fbjc0",
                                                            "created": 1590907067112,
                                                            "text": "how",
                                                            "expandState": "expand"
                                                        },
                                                        "children": [
                                                            {
                                                                "data": {
                                                                    "id": "c34pcaaaws80",
                                                                    "created": 1590906651762,
                                                                    "text": "accept objects that satisfy the requirements of either the MutableBufferSequence or ConstBufferSequence concept as their arguments that represent buffers"
                                                                },
                                                                "children": []
                                                            }
                                                        ]
                                                    },
                                                    {
                                                        "data": {
                                                            "id": "c34phoc4ti80",
                                                            "created": 1590907074169,
                                                            "text": "why",
                                                            "expandState": "expand"
                                                        },
                                                        "children": [
                                                            {
                                                                "data": {
                                                                    "id": "c34pfgw2h280",
                                                                    "created": 1590906901231,
                                                                    "text": "Although in most use cases, a single buffer is involved in a single I/O operation"
                                                                },
                                                                "children": []
                                                            },
                                                            {
                                                                "data": {
                                                                    "id": "c34pfqaai9k0",
                                                                    "created": 1590906921682,
                                                                    "text": "in some specific circumstances (for example, in a memory-constrained environment), a developer may want to use a composite buffer that comprises multiple smaller simple buffers distributed over the process's address space"
                                                                },
                                                                "children": []
                                                            }
                                                        ]
                                                    }
                                                ]
                                            }
                                        ]
                                    },
                                    {
                                        "data": {
                                            "id": "c34pmw4dev40",
                                            "created": 1590907482934,
                                            "text": "asio::buffer() free function",
                                            "expandState": "collapse"
                                        },
                                        "children": [
                                            {
                                                "data": {
                                                    "id": "c34pp62ran40",
                                                    "created": 1590907661333,
                                                    "text": "a way to simplify the usage of single buffers with  I/O-related functions and methods"
                                                },
                                                "children": []
                                            },
                                            {
                                                "data": {
                                                    "id": "c34ppqvy1jc0",
                                                    "created": 1590907706633,
                                                    "text": "has 28 overloads"
                                                },
                                                "children": [
                                                    {
                                                        "data": {
                                                            "id": "c34ppvn9zog0",
                                                            "created": 1590907716993,
                                                            "text": "accept a variety of representations of a buffer"
                                                        },
                                                        "children": []
                                                    }
                                                ]
                                            },
                                            {
                                                "data": {
                                                    "id": "c34pq9kt1i80",
                                                    "created": 1590907747319,
                                                    "text": "return an object of"
                                                },
                                                "children": [
                                                    {
                                                        "data": {
                                                            "id": "c34pqe3v3480",
                                                            "created": 1590907757178,
                                                            "text": "either the asio::mutable_ buffers_1"
                                                        },
                                                        "children": [
                                                            {
                                                                "data": {
                                                                    "id": "c34psez800o0",
                                                                    "created": 1590907915803,
                                                                    "text": "provide an interface and behavior that satisfy the requirements of the MutableBufferSequence concepts"
                                                                },
                                                                "children": []
                                                            }
                                                        ]
                                                    },
                                                    {
                                                        "data": {
                                                            "id": "c34pqf5s3vk0",
                                                            "created": 1590907759471,
                                                            "text": "or asio::const_buffers_1"
                                                        },
                                                        "children": [
                                                            {
                                                                "data": {
                                                                    "id": "c34pqx4vn680",
                                                                    "created": 1590907798598,
                                                                    "text": "If the buffer argument passed to the asio::buffer() function is a read-only type"
                                                                },
                                                                "children": []
                                                            },
                                                            {
                                                                "data": {
                                                                    "id": "c34psnb1tuw0",
                                                                    "created": 1590907933932,
                                                                    "text": "provide an interface and behavior that satisfy the requirements of the ConstBufferSequence concepts"
                                                                },
                                                                "children": []
                                                            }
                                                        ]
                                                    }
                                                ]
                                            }
                                        ]
                                    },
                                    {
                                        "data": {
                                            "id": "c34ptghhpqo0",
                                            "created": 1590907997448,
                                            "text": "Preparing a buffer for an output operation",
                                            "expandState": "collapse"
                                        },
                                        "children": [
                                            {
                                                "data": {
                                                    "id": "c34pugj29gg0",
                                                    "created": 1590908075907,
                                                    "text": "1. Allocate a buffer. Note that this step does not involve any functionality or data types from Boost.Asio"
                                                },
                                                "children": []
                                            },
                                            {
                                                "data": {
                                                    "id": "c34puhoogbs0",
                                                    "created": 1590908078424,
                                                    "text": "2. Fill the buffer with the data that is to be used as the output"
                                                },
                                                "children": []
                                            },
                                            {
                                                "data": {
                                                    "id": "c34pusz6lfc0",
                                                    "created": 1590908103003,
                                                    "text": "3. Represent the buffer as an object that satisfies the ConstBufferSequence concept's requirements"
                                                },
                                                "children": []
                                            },
                                            {
                                                "data": {
                                                    "id": "c34puya29480",
                                                    "created": 1590908114545,
                                                    "text": "4. The buffer is ready to be used with Boost.Asio output methods and functions"
                                                },
                                                "children": []
                                            }
                                        ]
                                    },
                                    {
                                        "data": {
                                            "id": "c34pw4l2shs0",
                                            "created": 1590908206636,
                                            "text": "Preparing a buffer for an input operation",
                                            "expandState": "collapse"
                                        },
                                        "children": [
                                            {
                                                "data": {
                                                    "id": "c34pwjy46bk0",
                                                    "created": 1590908240076,
                                                    "text": "1. Allocate a buffer. The size of the buffer must be big enough to fit the block of data to be received. Note that this step does not involve any functionalities or data types from Boost.Asio"
                                                },
                                                "children": []
                                            },
                                            {
                                                "data": {
                                                    "id": "c34pwl2smkg0",
                                                    "created": 1590908242536,
                                                    "text": "2. Represent the buffer using an object that satisfies the MutableBufferSequence concept's requirements"
                                                },
                                                "children": []
                                            },
                                            {
                                                "data": {
                                                    "id": "c34pwv0nblk0",
                                                    "created": 1590908264174,
                                                    "text": "3. The buffer is ready to be used with Boost.Asio input methods and functions"
                                                },
                                                "children": []
                                            }
                                        ]
                                    }
                                ]
                            },
                            {
                                "data": {
                                    "id": "c34q0opkavc0",
                                    "created": 1590908563900,
                                    "text": "How it works"
                                },
                                "children": [
                                    {
                                        "data": {
                                            "id": "c34q2jv2h4o0",
                                            "created": 1590908710077,
                                            "text": "Preparing a buffer for an output operation",
                                            "expandState": "collapse"
                                        },
                                        "children": [
                                            {
                                                "data": {
                                                    "id": "c35141sbvb40",
                                                    "created": 1590939859667,
                                                    "text": "In order to use std::string object with the send() method"
                                                },
                                                "children": [
                                                    {
                                                        "data": {
                                                            "id": "c35161mn61c0",
                                                            "created": 1590940016051,
                                                            "text": "complex approach",
                                                            "expandState": "expand"
                                                        },
                                                        "children": [
                                                            {
                                                                "data": {
                                                                    "id": "c3514cgtw400",
                                                                    "created": 1590939882916,
                                                                    "text": "asio::const_buffer asio_buf(buf.c_str(), buf.length());"
                                                                },
                                                                "children": []
                                                            },
                                                            {
                                                                "data": {
                                                                    "id": "c3514dcfcbc0",
                                                                    "created": 1590939884826,
                                                                    "text": "std::vector<asio::const_buffer> buffers_sequence;"
                                                                },
                                                                "children": []
                                                            },
                                                            {
                                                                "data": {
                                                                    "id": "c3514kyedp40",
                                                                    "created": 1590939901392,
                                                                    "text": "buffers_sequence.push_back(asio_buf);"
                                                                },
                                                                "children": []
                                                            }
                                                        ]
                                                    },
                                                    {
                                                        "data": {
                                                            "id": "c35175182jk0",
                                                            "created": 1590940101827,
                                                            "text": "use the asio::buffer()function"
                                                        },
                                                        "children": [
                                                            {
                                                                "data": {
                                                                    "id": "c35177knhvs0",
                                                                    "created": 1590940107356,
                                                                    "text": "asio::const_buffers_1 output_buf = asio::buffer(buf);"
                                                                },
                                                                "children": []
                                                            }
                                                        ]
                                                    }
                                                ]
                                            }
                                        ]
                                    },
                                    {
                                        "data": {
                                            "id": "c3517kky3ig0",
                                            "created": 1590940135672,
                                            "text": "Preparing a buffer for an input operation",
                                            "expandState": "collapse"
                                        },
                                        "children": [
                                            {
                                                "data": {
                                                    "id": "c351aci4o6w0",
                                                    "created": 1590940353179,
                                                    "text": "In the first step, the buffer is allocated. In this case, the buffer is an array of chars allocated in the free memory"
                                                },
                                                "children": []
                                            },
                                            {
                                                "data": {
                                                    "id": "c351aglg2ko0",
                                                    "created": 1590940362087,
                                                    "text": "In the next step, the adaptor object is instantiated that can be used with both the input and output operations"
                                                },
                                                "children": []
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "data": {
                            "id": "c351avkfss80",
                            "created": 1590940394678,
                            "text": "Using extensible stream-oriented I/O buffers",
                            "expandState": "collapse"
                        },
                        "children": [
                            {
                                "data": {
                                    "id": "c351b4yxftk0",
                                    "created": 1590940415145,
                                    "text": "Extensible buffers",
                                    "expandState": "collapse"
                                },
                                "children": [
                                    {
                                        "data": {
                                            "id": "c351bavjqbk0",
                                            "created": 1590940428001,
                                            "text": "buffers that dynamically increase their size when new data is written to them"
                                        },
                                        "children": []
                                    },
                                    {
                                        "data": {
                                            "id": "c351bklg82o0",
                                            "created": 1590940449159,
                                            "text": "usually used to read data from sockets when the size of the incoming message is unknown"
                                        },
                                        "children": []
                                    }
                                ]
                            },
                            {
                                "data": {
                                    "id": "c351ds75c2g0",
                                    "created": 1590940622436,
                                    "text": "How to do it",
                                    "expandState": "collapse"
                                },
                                "children": [
                                    {
                                        "data": {
                                            "id": "c351e9gauzs0",
                                            "created": 1590940659995,
                                            "text": "Extensible stream-oriented buffers"
                                        },
                                        "children": [
                                            {
                                                "data": {
                                                    "id": "c351etic12g0",
                                                    "created": 1590940703654,
